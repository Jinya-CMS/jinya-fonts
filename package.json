{
  "name": "jinya-fonts",
  "version": "3.2.0",
  "scripts": {
    "lint": "bun run admin:lint && bun run frontend:lint",
    "format": "bun run admin:format && bun run frontend:format",
    "admin:lint": "bun run admin:prettier && bun run admin:eslint && bun run admin:stylelint",
    "admin:prettier": "prettier static/admin/js --check",
    "admin:eslint": "eslint -c eslint.config.cjs static/admin/js/ static/admin/index.js",
    "admin:stylelint": "stylelint static/admin/css/**/*.css",
    "admin:format": "prettier static/admin --write",
    "frontend:lint": "bun run frontend:prettier && bun run frontend:eslint && bun run frontend:stylelint",
    "frontend:prettier": "prettier static/frontend/js --check",
    "frontend:eslint": "eslint -c eslint.config.cjs static/frontend/js/",
    "frontend:stylelint": "stylelint static/admin/css/**/*.css",
    "frontend:format": "prettier static/frontend --write"
  },
  "author": "Jinya Developers",
  "repository": {
    "type": "git",
    "url": "ssh://git@gitlab.imanuel.dev:2289/jinya-cms/jinya-fonts.git"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "9.25.0",
    "@types/alpinejs": "3.13.11",
    "eslint": "9.25.0",
    "eslint-config-prettier": "10.1.2",
    "globals": "16.0.0",
    "prettier": "3.5.3",
    "stylelint": "16.18.0",
    "stylelint-config-standard": "38.0.0"
  }
}
